<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:abbreviationsBarColor="@color/background_color"
        app:abbreviationsLabelsColor="@color/calendar_color"
        app:daysLabelsColor="@color/calendar_color"
        app:eventsEnabled="true"
        app:headerColor="@color/background_color"
        app:headerLabelColor="@color/calendar_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pagesColor="@color/background_color"
        app:selectionColor="@color/accent_color"
        app:todayLabelColor="@color/accent_color"
        app:type="one_day_picker" />

    <TextView
        android:id="@+id/add_to_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_24"
        android:drawablePadding="@dimen/dp_24"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/calendar_add_press"
        android:textColor="@color/accent_color"
        android:visibility="gone"
        app:drawableBottomCompat="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/empty_drink_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/calendar_empty"
        android:textColor="@color/accent_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_view" />

    <TextView
        android:id="@+id/select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/calendar_select_date"
        android:textColor="@color/accent_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_view" />

</androidx.constraintlayout.widget.ConstraintLayout>