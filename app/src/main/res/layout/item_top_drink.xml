<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/item_drink_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_top_drink_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:contentDescription="@string/cd_icon_drink" />

        <TextView
            android:id="@+id/item_top_drink_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textColor="@color/top_drink_color"
            android:text="@string/statistic_drink_count"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_top_drink_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textColor="@color/top_drink_color"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/item_drink_container"
        app:layout_constraintStart_toStartOf="@+id/item_drink_container"
        app:layout_constraintTop_toBottomOf="@+id/item_drink_container"
        tools:text="Whiskey" />



</androidx.constraintlayout.widget.ConstraintLayout>